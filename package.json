{
  "name": "weave-gitops-tools",
	"displayName": "Weave GitOps Tools",
	"description": "Weave GitOps automation tools for continuous delivery of Kubernetes and Cloud Native applications",
	"version": "0.1.0",
	"publisher": "weave.works",
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Azure",
		"Other"
	],
	"keywords": [
		"weave",
		"gitOps",
		"wego",
		"kubernetes",
		"helm",
		"aks"
	],
	"icon": "resources/icons/weave-logo.png",
	"license": "MPL-2.0",
	"readme": "README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/weaveworks/vscode-gitops-tools"
	},
	"bugs": "https://github.com/weaveworks/vscode-gitops-tools/issues",
	"homepage": "https://github.com/weaveworks/vscode-gitops-tools/README.md",
	"galleryBanner": {
		"color": "#333",
		"theme": "dark"
	},
	"activationEvents": [
    "onCommand:weave.gitOps.hello"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "weave.gitOps.hello",
				"title": "Hello",
				"category": "GitOps"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "weave-gitops",
					"title": "Weave GitOps",
					"icon": "resources/icons/weave-logo.png"
				}
			]
		},
		"views": {
			"weave-gitops": [
				{
					"id": "weave.gitOps.tools.view",
					"name": "Weave GitOps Tools"
				}	
			]
		},
		"viewsWelcome": [
			{
				"view": "weave.gitOps.tools.view",
				"contents": "Loading Weave GitOps Tools ..."
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"extensionDependencies": [
		"redhat.vscode-yaml"
	],
	"devDependencies": {
		"@types/vscode": "^1.59.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"ts-loader": "^9.2.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	}
}
